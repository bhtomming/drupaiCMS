<nav class="top-menu">
    <span class="menu"><img src="/bundles/app/images/nav.png" alt=""/> </span>
    <ul>
    {% if menus %}{%- for menu in menus -%}
        <li {% if menu.submenu %}class="nav-item dropdown"{% endif %} >
            <a href="{{ path(menu.0.link, {categories: menu.0.name}) }}" {% if menu.submenu %}class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"{% endif %}>{{ menu.0.name }}</a>
            {% if menu.submenu %}
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                {% for smenu in menu.submenu -%}
                <a class="dropdown-item" href="{{ path(smenu.link,{categories: smenu.name}) }}"  title="{{ smenu.name }}">{{ smenu.name }} </a>
                {% endfor -%}
                </div>
            {%- endif -%}
        </li><label>/</label>
    {%- endfor -%}{% endif -%}
    </ul>
</nav>
