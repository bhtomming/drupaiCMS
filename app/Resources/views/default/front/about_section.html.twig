{% if abouts %}
<h3>关于我们</h3>
<div class="row">
    {% for about in abouts %}
    <div class="col-md-5 wow bounceInRight animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">
        <img src="{{ asset('bundles/app/images/logo.png') }}" class="img-fluid" />
    </div>
    <div class="col-md-7  wow bounceInLeft animated" data-wow-delay="0.4s" style="visibility: visible; -webkit-animation-delay: 0.4s;">
        {{ about.content | raw }}
    </div>
        {% endfor %}
</div>
{% endif %}